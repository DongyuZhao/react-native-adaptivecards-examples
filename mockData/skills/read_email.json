{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Sender Placeholder",
                            "weight": "bolder",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "none",
                            "text": "Title Placeholder",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "width": "stretch",
            "separator": true,
            "items": [
                {
                    "type": "TextBlock",
                    "spacing": "none",
                    "text": "Content Placeholder",
                    "wrap": true
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Reply",
            "data": {
                "intent:confirm": "true",
                "email_action": "Reply"
            }
        },
        {
            "type": "Action.Submit",
            "title": "Cancel",
            "data": {
                "intent:cancel": "true"
            }
        }
    ]
}